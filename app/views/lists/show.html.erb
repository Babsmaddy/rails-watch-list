<div class= "container m-5">
<h1><%= @list.name %></h1>
<%= link_to "delete this list", list_path(@list), class: "btn btn-cancel",
data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>

<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>

<h3>Add a new movie to the list :</h3>

  <%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.association :movie %>
  <%= f.input :comment %>
  <%= f.submit class: 'btn btn-flat' %>
<% end %>

<%= link_to "Return to all lists", lists_path %>
</div>

<ul>
  <% @list.movies.each do |movie| %>
  <li><%= movie.title %></li>
  <li><%= movie.overview %></li>
  <li><%= movie.poster_url %></li>
  <li><%= movie.rating %></li>
  <% end %>
</ul>
